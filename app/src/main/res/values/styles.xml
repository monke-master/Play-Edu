<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Дефолтная кнопка -->
    <style name="DefaultButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/DefaultBtnAppearance</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

    <!-- Форма дефолтной кнопки -->
    <style name="DefaultBtnAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/btn_rounding_radius</item>
    </style>

    <!-- Поле ввода -->
    <style name="RoundBtn" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_round_btn</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
        <item name="android:layout_width">@dimen/round_btn_radius</item>
        <item name="android:layout_height">@dimen/round_btn_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>


    </style>

    <!-- Поле ввода -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_edit_txt</item>
        <item name="android:padding">15dip</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
    </style>

    <!-- Стили текстов -->
    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/header_txt_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PriceText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/price_txt_size</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>


</resources>